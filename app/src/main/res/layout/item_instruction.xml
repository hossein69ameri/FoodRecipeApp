<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5mdp"
    android:background="@drawable/bg_rounded_light_stroke"
    android:padding="@dimen/_5mdp">
    <!--Image-->
    <ImageView
        android:id="@+id/coverImg"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--name-->
    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/independence"
        android:textSize="@dimen/_9font_mdp"
        android:layout_marginTop="@dimen/_5mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coverImg" />
    <!--Count-->
    <TextView
        android:id="@+id/countTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5mdp"
        android:textColor="@color/dolphinGray"
        android:textSize="@dimen/_8font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>